{
  "name": "{{& name }}",
  "version": "{{& version }}",
  "description": "{{& description }}",
  "scripts": {
    "prepublish": "./node_modules/.bin/grunt build;./node_modules/.bin/grunt doc",
    "build": "./node_modules/.bin/grunt build",
    "test": "./node_modules/.bin/grunt test",
    "doc": "./node_modules/.bin/grunt doc"
  },
  "bin": {
    "{{& filebasename }}": "./bin/{{& filebasename}}"
  },
  "engines" : { "node" : ">=0.8.0" },
  "keywords": [
    "jsx",
    "altjs",
    "commonjs",
    "nodejs",
    "cli",
    "app"
  ],
  "homepage": "{{& homepage }}",
  "bugs": {
    "url": "{{& issuetracker }}"
  },
  "directories": {
    "doc": "./doc",
    "lib": "./lib"
  },
  "repository": {
    "type": "{{& repositorytype}}",
    "url": "{{& repository }}"
  },
  "devDependencies": {
    "grunt-contrib-watch": "~0.5.3",
    "grunt": "~0.4.1",
    "grunt-cli": "~0.1.10",
    "grunt-jsx": ">=0.1.5",
    "grunt-node-webkit-builder": "~0.1.18",
    "grunt-exec": "~0.4.5",
    "getopt.jsx": "~0.2.0",
    "node-webkit.jsx": "~0.1.0"
  },
  "author": "{{& author }}",
  "license": "{{& licensename }}"
}
