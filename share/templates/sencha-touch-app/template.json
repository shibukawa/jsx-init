{
    "comment": "@@@@@ This file is used from jsx-init. Not installed to generated program @@@@@",
    "description": "includes: JSX source file, sencha-touch library and wrapper, html, css, web server setting to run on Chrome.",
    "dirs": [
        "dest",
        "dest/resources",
        "dest/cmd",
        "dest/packages",
        "dest/touch",
        "dest/touch/src",
        "dest/touch/microloader",
        "dest/touch/cmd",
        "src",
        "src/controller",
        "src/form",
        "src/model",
        "src/store",
        "src/view",
        "lib",
        "test",
        "doc"
    ],
    "templates": [
        "README.md",
        "HISTORY.md",
        "package.json",
        "src/app.jsx",
        "dest/app.json",
        "dest/index.html",
        "dest/build.xml",
        "test/test-__name__.jsx"
    ],
    "copyfiles": [
        "__dot__gitignore",
        ".npmignore",
        ".travis.yml",
        "gruntfile.js",
        "src/ext-boot.jsx",
        "src/view/main.jsx",
        "dest/touch/cmd/sencha.cfg",
        "dest/__dot__sencha",
        "dest/resources",
        ["{{& senchatouchsdk }}/src", "dest/touch/src"],
        ["{{& senchatouchsdk }}/sencha-touch-all-debug.js", "dest/touch"],
        ["{{& senchatouchsdk }}/sencha-touch-all.js", "dest/touch"],
        ["{{& senchatouchsdk }}/sencha-touch-debug.js", "dest/touch"],
        ["{{& senchatouchsdk }}/sencha-touch.js", "dest/touch"],
        ["{{& senchatouchsdk }}/file-header.txt", "dest/touch"],
        ["{{& senchatouchsdk }}/license.txt", "dest/touch"],
        ["{{& senchatouchsdk }}/version.txt", "dest/touch"],
        ["{{& senchatouchsdk }}/microloader", "dest/touch/microloader"]
    ],
    "extraQuestions": [
        {
            "key": "senchatouchsdk",
            "type": "path",
            "question": "Downloaded sencha-touch SDK directory",
            "default": "~/touch-2.3.0",
            "persistent": true
        },
        {
            "key": "androidsdk",
            "type": "path",
            "question": "Android SDK directory",
            "default": "~/android-sdk",
            "persistent": true,
            "allowEmpty": true
        }
    ],
    "licenses": false
}
